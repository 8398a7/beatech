<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ja" lang="ja">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-Style-Type" content="text/css" />
    <meta http-equiv="Content-Script-Type" content="text/javascript" />
    <meta http-equiv="imagetoolbar" content="no" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <link rel="shortcut icon" href="assets/favicon.png" />
    <link rel="stylesheet" href="css/common.css" type="text/css" />
    <title><%= page_title %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "bootstrap" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="top">
      <div id="box">
        <div id="header">
          <h1><%= link_to "BEATECH", :root %></h1>
          <div class="account">
            <% if @current_user %>
            <div class="dropdown pull-right">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= @current_user.account %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="#">プロフィールを編集</a></li>
                <li><a href="#">設定</a></li>
                <li class="divider"></li>
                <li><%= link_to 'ログアウト', session_path(@current_user.account), :method => :delete %></li>
              </ul>
            </div>
            <% else %>
            <div class="dropdown pull-right">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">ログイン<span class="caret"></span></a>
              <ul class="dropdown-menu" id="login">
                <li>
                <%= form_tag sessions_path do %>
                <table id="login"><tbody>
                  <tr><td><%= label_tag :account, 'BEATECH アカウント' %></td></tr>
                  <tr><td><%= text_field_tag :account, params[:account] %></td></tr>
                  <tr><td><%= label_tag :pass, 'パスワード' %></td>
                  <tr><td><%= password_field_tag :pass, params[:pass] %></td></tr>
                  <tr>
                    <td><%= submit_tag "ログイン", :class => "btn" %></td>
                  </tr>
                </tbody></table>
                <% end %>
                </li>
                <li class="divider"></li>
                <li>
                  または<br />
                  <button class="btn btn-info">Twitterでログイン</button>
                </li>
              </ul>
            </div>
            <% end %>
          </div>
        </div><!-- header end -->
        <div id="menu">
          <ul>
            <li><%= link_to "ホーム", :root %></li>
            <% @header_menu.each do |menu| %>
            <li><%= link_to menu.title, menu.url %></li>
            <% end %>
          </ul>
        </div><!-- menu end -->
      </div>
      <div id="contents">
        <div id="subL">
          <div class="section">
            <h2>サークルメニュー</h2>
            <ul>
              <% @circle_menu.each do |menu| %>
              <li><%= link_to menu.title, menu.url %></li>
              <% end %>
            </ul>
          </div><!-- section end -->
          <div class="section">
            <h2>交流メニュー</h2>
            <ul>
              <% @communication_menu.each do |menu| %>
              <li><%= link_to menu.title, menu.url %></li>
              <% end %>
            </ul>
          </div><!-- section end -->
          <div class="section">
            <h2>音ゲーコンテンツ</h2>
            <ul>
              <% @contents_menu.each do |menu| %>
              <li><%= link_to menu.title, menu.url %></li>
              <% end %>
            </ul>
          </div><!-- section end -->
        </div><!-- subL end -->
        <div id="main">
          <%= yield %>
        </div><!-- main end-->
      </div><!-- contents end -->
      <div id="pageTop">
        <a href="#top">ページのトップへ戻る</a>
      </div><!-- pageTop end -->
      <div id="footer">
        <div class="copyright">Copyright &copy; 2012 beatech.net. All Rights Reserved. Created by ikstrm.</div>
      </div><!-- footer end -->
    </div><!-- top end -->
  </body>
</html>

