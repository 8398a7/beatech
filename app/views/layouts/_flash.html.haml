- if flash[:notice]
  #main-alert
    .alert.alert-success
      %button.close{ data: { dismiss: 'alert' }, type: 'button' } &times;
      = flash[:notice]

- if flash[:alert]
  #main-alert
    .alert.alert-danger
      %button.close{ data: { dismiss: 'alert' }, type: 'button' } &times;
      = flash[:alert]
