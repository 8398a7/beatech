= form_for @current_user do |f|
  .field
    = f.label "名前"
    = f.text_field :name
  .field
    = f.label "Twitterアカウント"
    - if twitter_accounts = @current_user.twitter_accounts
      %table.style-table{:style => "margin-bottom: 10px;"}
        %thead
          %tr
            %th ID
            %th
        %tbody
          - twitter_accounts.each do |twitter_account|
            %tr
              %td= twitter_account.screen_name
              %td= link_to '削除', "/twitter_accounts/destroy/#{twitter_account.id}", style: 'text-decoration: none; color: #000;'
    %a.btn{:href => "/auth/twitter", :style => "text-decoration: none; color: #000; margin-bottom: 10px;"} アカウント追加
  .field
    = f.label "入学年度・留年回数"
    = f.number_field :year
    = f.select :repeated_year, {"留年なし" => 0, "1回" => 1, "2回" => 2, "3回" => 3, "4回" => 4}
  .field
    = f.label "短いプロフィール(160文字まで 5行目以降は表示されません)"
    = f.text_area :bio, :class => "span8", :rows => "4", :maxlength => "160"
  .field
    = f.label "詳細プロフィール"
    = f.text_area :profile, :class => "span8", :rows => "10", :maxlength => "1000"
  .actions
    = f.submit "更新", :class => "btn"
